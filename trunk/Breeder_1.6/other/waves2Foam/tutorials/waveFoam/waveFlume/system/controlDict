FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application interFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         20;

deltaT          0.001;

writeControl    adjustableRunTime;

writeInterval   0.2;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.25;

maxAlphaCo      0.25;

maxDeltaT       1;

functions
{
    surfaceElevation
    {
        type            surfaceElevation;
        functionObjectLibs ( "libwaves2Foam.so" );
        
        outputControl   timeStep; // Alternative: outputTime
        outputInterval  1;
        
        // Additional output controls in waves2Foam
        // Set outputInterval = 1 and timeStep output control if surfaceSampleDeltaT is used.
        samplingStartTime 2; 
        surfaceSampleDeltaT 0.03; // Only an approximate output interval! No feedback on deltaT in the simulation
        
        setFormat raw;
        interpolationScheme cellPointFace;
        fields (alpha1);
        sets
        (
            lineName0
            {
                type        face;
                axis        y;

                start       (0.1 -0.2 0.05);
                end         (0.1  0.15 0.05);
                nPoints     100;
            }

            lineName1
            {
                type        face;
                axis        y;

                start       (1.1 -0.2 0.05);
                end         (1.1  0.15 0.05);
                nPoints     100;
            }

            lineName2
            {
                type        face;
                axis        y;

                start       (2.1 -0.2 0.05);
                end         (2.1  0.15 0.05);
                nPoints     100;
            }
            
            lineName3
            {
                type        face;
                axis        y;

                start       (3.1 -0.2 0.05);
                end         (3.1  0.15 0.05);
                nPoints     100;
            }
            
            lineName4
            {
                type        face;
                axis        y;

                start       (4.1 -0.2 0.05);
                end         (4.1  0.15 0.05);
                nPoints     100;
            }
            
            lineName5
            {
                type        face;
                axis        y;

                start       (5.1 -0.2 0.05);
                end         (5.1  0.15 0.05);
                nPoints     100;
            }
            
            lineName6
            {
                type        face;
                axis        y;

                start       (6.1 -0.2 0.05);
                end         (6.1  0.15 0.05);
                nPoints     100;
            }
            
            lineName7
            {
                type        face;
                axis        y;

                start       (7.1 -0.2 0.05);
                end         (7.1  0.15 0.05);
                nPoints     100;
            }
            
            lineName8
            {
                type        face;
                axis        y;

                start       (8.1 -0.2 0.05);
                end         (8.1  0.15 0.05);
                nPoints     100;
            }                                                            
        );
    }
}

