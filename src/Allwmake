#!/bin/bash

if [ ! -f "./../bin/bashrc" ]
then
    cp ../bin/bashrc.org ../bin/bashrc
    chmod a+x ./../bin/bashrc
fi

. ../bin/bashrc

# Take care of the differences in the options, which arose between OF21 and OF22.
rm -f $WAVES_SRC/Make/options

if [ "$WM_PROJECT_VERSION_NUMBER" -lt "220" ]
then
    ln -s -f $WAVES_SRC/Make/options.210 $WAVES_SRC/Make/options
else
    ln -s -f $WAVES_SRC/Make/options.220 $WAVES_SRC/Make/options
fi

# Compile the library
wmake libso
